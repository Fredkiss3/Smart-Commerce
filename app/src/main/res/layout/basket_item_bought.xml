<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="?attr/selectableItemBackground"
    android:baselineAligned="false"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >


        <TextView
            android:id="@+id/basket_item_name"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:gravity="center_vertical"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:maxLines="1"
            android:text="@string/basket_item_name"
            android:ellipsize="end"
            tools:ignore="NestedWeights" />


            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:id="@+id/basket_item_total_bought"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:textStyle="bold"
                android:textColor="@color/grey"
                android:text="@string/basket_item_total_bought"
                android:maxLines="1"
                android:ellipsize="end"
                />


    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_gravity="end"
        android:layout_marginLeft="5dp"
        android:gravity="end"
        android:layout_marginStart="5dp">

        <TextView
            android:id="@+id/basket_item_global_price"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical|end"
            android:textStyle="bold"
            android:textColor="@color/grey"
            android:text="@string/basket_item_global_price"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:maxLines="1"/>

        <ImageButton
            android:id="@+id/basket_item_edit_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@color/transparent"
            android:src="@drawable/ic_edit_black_24dp"
            android:scaleType="centerInside"
            android:contentDescription="@string/logo_desc" />

        <ImageButton
            android:id="@+id/basket_item_delete_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@color/transparent"
            android:src="@drawable/ic_delete_grey_24dp"
            android:scaleType="centerInside"
            android:contentDescription="@string/logo_desc" />

    </LinearLayout>

</LinearLayout>