<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.AboutActivity"
    android:background="@drawable/back_about__"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="152dp"
        android:orientation="vertical"
        android:layout_marginLeft="40dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginRight="40dp">

        <!--<ImageButton-->
            <!--android:id="@+id/logo_btn"-->
            <!--android:layout_width="60dp"-->
            <!--android:layout_height="60dp"-->
            <!--android:layout_gravity="center"-->
            <!--android:contentDescription="@string/logo_desc"-->
            <!--android:src="@drawable/logo_white_round"-->
            <!--android:scaleType="centerInside"-->
            <!--android:background="@color/transparent"/>-->

        <android.support.v7.widget.CardView
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:cardCornerRadius="30dp"
            app:cardBackgroundColor="?attr/lighttextcolor"
            android:foreground="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            >

            <ImageButton
                android:id="@+id/logo_btn"
                android:background="@color/transparent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerInside"
                android:foreground="?attr/selectableItemBackground"
                android:src="@drawable/ic_attach_money_black_24dp"
                tools:ignore="ContentDescription,UnusedAttribute" />
        </android.support.v7.widget.CardView>


        <ImageView
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:src="@drawable/smart__"
            android:scaleType="centerInside"
            android:gravity="center"
            android:textStyle="bold"
            tools:ignore="ContentDescription" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp">

        <TextView
            android:id="@+id/about_infos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="15sp"
            android:text="@string/author_infos"
            android:textColor="@color/white" />
    </LinearLayout>

</LinearLayout>